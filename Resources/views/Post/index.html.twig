{% extends 'PPAcmeBundle::layout.html.twig' %}

{% block body -%}
    <h1>Post list</h1>

    {{ form(form) }}

    <table class="records_list">
        <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Content</th>
            <th>Tags</th>
            <th>Author</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.id }}</td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.content|slice(0, 200) }}</td>
                <td>{{ entity.tags|join(', ') }}</td>
                <td>{{ entity.author }}</td>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="navigation">
        {{ knp_pagination_render(entities) }}
    </div>
{% endblock %}
